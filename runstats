#
# runstats - a cheesy little script to:
#   rlogin to $1 (a list of hosts - or uncomment for the list)
#   copy over to $1 a fresh copy of my getstats script
#   run getstats on $1
#   copy the logfile generated by getstats to my home log dir
#
#for i in moby orca falcon condor hawk eagle db1prod db2prod db1qa db2qa shark marlin boa bridge1 bridge2 whale cobra puma cheetah
for i in hhqadb1 hhqaap1 hhprdb1 hhprap1
#for i in $1
do
	ping $i 2
	if [ $? -eq 0 ]
	then
		rlogin $i -l root
		rcp $HOME/bin/getstats root@${i}:/tmp/getstats
		rsh $i -l root "/tmp/getstats > /dev/null "
		rcp root@${i}:/tmp/${i}.stats.`date +%m%d%y` $HOME/log/${i}.log.tar
	fi
done
